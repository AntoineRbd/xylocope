{
  "name": "xylocope-website",
  "version": "1.0.0",
  "description": "Site web moderne et responsive pour Xylocope",
  "main": "index.html",
  "scripts": {
    "start": "npx live-server --port=3000 --open=/index.html",
    "build": "npm run minify-css && npm run minify-js",
    "minify-css": "npx clean-css-cli -o dist/css/styles.min.css css/reset.css css/main.css css/responsive.css",
    "minify-js": "npx terser js/utils.js js/main.js -o dist/js/scripts.min.js --compress --mangle",
    "optimize-images": "npx imagemin images/* --out-dir=dist/images",
    "lint": "npx eslint js/*.js tests/**/*.js --ignore-path .eslintignore",
    "format": "npx prettier --write \"**/*.{html,css,js,json,md}\"",
    "validate-html": "npx html-validate *.html",
    "test:unit": "jest --testPathPattern=tests/unit",
    "test:integration": "jest --testPathPattern=tests/integration",
    "test:e2e": "playwright test",
    "test:watch": "jest --watch --testPathPattern=tests/unit",
    "test:coverage": "jest --coverage --testPathPattern=tests",
    "test": "npm run lint && npm run validate-html && npm run test:unit && npm run test:integration",
    "test:all": "npm run test && npm run test:e2e",
    "dev": "npm run start",
    "deploy": "npm run build",
    "test:deployment": "node scripts/test-deployment.js",
    "test:ftp": "php scripts/test-ftp.php",
    "setup:deployment": "bash scripts/setup-deployment.sh"
  },
  "keywords": [
    "website",
    "frontend",
    "responsive",
    "modern",
    "xylocope"
  ],
  "author": "Xylocope Team",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.23.9",
    "@babel/plugin-transform-runtime": "^7.23.9",
    "@babel/preset-env": "^7.23.9",
    "@playwright/test": "^1.41.2",
    "@testing-library/dom": "^9.3.4",
    "@testing-library/jest-dom": "^6.2.0",
    "@testing-library/user-event": "^14.5.2",
    "babel-jest": "^29.7.0",
    "clean-css-cli": "^5.6.2",
    "eslint": "^8.57.0",
    "html-validate": "^8.7.4",
    "imagemin": "^8.0.1",
    "imagemin-mozjpeg": "^10.0.0",
    "imagemin-pngquant": "^9.0.2",
    "imagemin-svgo": "^10.0.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "live-server": "^1.2.2",
    "prettier": "^3.1.1",
    "terser": "^5.26.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/xylocope-website.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/xylocope-website/issues"
  },
  "homepage": "https://your-username.github.io/xylocope-website"
}